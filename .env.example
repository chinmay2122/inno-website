# InnovateX Environment Configuration
# Copy this to .env file and fill in your production values
# This file should NOT be committed to version control

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASS=your_secure_password_here
DB_NAME=innovatex_events

# HTTPS Configuration (set to true in production)
HTTPS_ENABLED=false

# Admin Settings
ADMIN_EMAIL=admin@example.com

# Security - Session timeout in seconds (30 minutes = 1800)
SESSION_TIMEOUT=1800

# Email Configuration (optional)
EMAIL_FROM=noreply@innovatex.com
EMAIL_HOST=smtp.example.com
EMAIL_USER=
EMAIL_PASS=

# Logging
LOG_LEVEL=info

# Production Mode
ENVIRONMENT=development
